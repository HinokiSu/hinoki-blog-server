{
  "apps": [
    {
      "name": "blog_server_nestjs",
      "exec_interpreter": "node",
      "exec_mode": "fork",
      "cwd": "dist/apps/server/",
      "args":"",
      "script": "main.js",
      "max_memory_restart": "1G",
      "autorestart": true,
      "node_args": [],
      "watch": false,
      "error_file": "./blog-server-err.log",
      "out_file": "./blog-server-out.log",
      "pid_file": "./blog_server.pid",
      "env": {
        "NODE_ENV": "production"
      },
      "min_uptime": "60s",
      "max_restarts": 30
    }
  ]
}
